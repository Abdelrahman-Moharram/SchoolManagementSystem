@model SchoolManagementSystem.Models.Lecture

<h4>Lecture</h4>
<hr />
<div class="row">
    <div class="col-12">
        <form asp-action="AddLecture">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input name="SubjectId" value="@Model.SubjectClassroomTeacher?.SubjectId" hidden />
            <input name="TeacherId" value="@Model.SubjectClassroomTeacher?.TeacherId" hidden />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" value="" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
