@model SchoolManagementSystem.ViewModels.LoginViewModel


<div class="container-fluid py-5">
    <div class="container">
        <div class="bg-light rounded">
            <div class="row g-0">
                <div class="col-12 wow fadeIn" data-wow-delay="0.1s">
                    <div class="h-100  d-flex flex-column justify-content-center p-5">
                        <h1 class="mb-4 mx-auto">Login</h1>
                        <form asp-action="Login">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="col-8 mb-4  mx-auto">
                                <div class="form-floating">
                                    <label asp-for="UserName" class="control-label">Username or Email</label>
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-8 mb-4 mx-auto">
                                <div class="form-floating">
                                <label asp-for="Password" class="control-label"></label>
                                <input asp-for="Password" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mt-4 mb-4 mx-auto">
                                <div class="form-check">
                                <label asp-for="RemeberMe" class="control-label">Remeber Me</label>
                                <input asp-for="RemeberMe" type="checkbox"  class="form-check-input" />
                                <span asp-validation-for="RemeberMe" class="text-danger"></span>
                            </div>
                            </div>
                            <div class="col-12 mb-4 mx-auto">
                                <div class="form-floating">
                                    <input type="submit" value="Login" class="btn btn-primary" />
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</div>
<div>
    <a class="mx-5" asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
