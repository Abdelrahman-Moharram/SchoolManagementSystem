@model SchoolManagementSystem.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

@* <h1>Register</h1>

<hr /> *@

<!-- Appointment Start -->
<div class="container-fluid py-5">
    <div class="container">
        <div class="bg-light rounded">
            <div class="row g-0">
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                    <div class="h-100 d-flex flex-column justify-content-center p-5">
                        <h1 class="mb-4">Join Us</h1>
                        <form method="post" enctype="multipart/form-data">
                            <div asp-validation-summary="All" class="text-danger"></div>

                            <div class="row g-3">
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="UserName" placeholder="User Name" class="form-control border-0" />
                                        <label asp-for="UserName" class="control-label"></label>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Email" class="form-control border-0"  placeholder="Email">
                                        <label asp-for="Email" ></label>
                                        <span asp-validation-for="Email" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="PhoneNumber" class="form-control border-0" placeholder="Phone Number">
                                        <label asp-for="PhoneNumber"></label>
                                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                                    </div>
                                </div>
                                
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Image" type="file" onchange="DisplayImg()" id="ImageField" class="form-control border-0" placeholder="Image">
                                        <label asp-for="Image"></label>
                                        <span asp-validation-for="Image" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="Password" class="form-control border-0" placeholder="Password">
                                        <label asp-for="Password"></label>
                                        <span asp-validation-for="Password" class="text-danger"></span>

                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-floating">
                                        <input asp-for="ConfirmPassword" class="form-control border-0" placeholder="Confirm Password">
                                        <label asp-for="ConfirmPassword">Confirm Password</label>
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button class="btn btn-primary w-100 py-3" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s" style="min-height: 400px;">
                    <div class="position-relative h-100">
                        <img id="ImgElement" class="position-absolute w-100 h-100 rounded" src="~/img/appointment.jpg" style="object-fit: cover;">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    const imgInp = document.getElementById("ImageField");
    const ImgElement = document.getElementById("ImgElement");
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
            ImgElement.src = URL.createObjectURL(file)
        }
    }
</script>
<!-- Appointment End -->

<div class="mx-5">
    <a asp-action="Index" asp-controller="Home">Back to Home</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
