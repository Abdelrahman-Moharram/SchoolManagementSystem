@model SchoolManagementSystem.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "AddSubject";
    Layout = "_AdminLayout";
}

<h1>AddSubject</h1>

<h4>SubjectViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSubject">
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                <input asp-for="Grade" class="form-control" />
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="subjectCategoryId" class="control-label">Subject Category</label>
                <select asp-for="subjectCategoryId" class="form-control" asp-items="@(new SelectList(ViewBag.subjectCategory, "Id", "Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="subjectCategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="levelId" class="control-label">Level</label>
                <select asp-for="levelId" class="form-control" asp-items="@(new SelectList(ViewBag.Levels, "Id", "Name"))">
                    <option></option>
                </select>
                <span asp-validation-for="levelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
