@model SchoolManagementSystem.Models.Classroom

@{
    ViewData["Title"] = "AddClassRoom";
    Layout = "_AdminLayout";
}

<h1>AddClassRoom</h1>

<h4>Classroom</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClassRoom">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="levelId" class="control-label">Level</label>
                <select asp-for="levelId" class="form-control" asp-items="@(new SelectList(ViewBag.levels, "Id", "Name"))">
                    <option></option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="capacity" class="control-label"></label>
                <input asp-for="capacity" class="form-control" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

