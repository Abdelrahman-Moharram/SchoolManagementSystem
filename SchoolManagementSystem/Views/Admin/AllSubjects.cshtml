@model IEnumerable<SchoolManagementSystem.Models.Subject>

@{
    ViewData["Title"] = "All Subjects";
    Layout = "_AdminLayout";
}

<h1>All Subjects</h1>

<p>
    <a asp-action="AddSubject">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Grade)
            </th>
            
            <th>
                Subject Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.level)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.subjectCategory.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.level.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
